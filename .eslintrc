{
  "extends": [
    "airbnb/base",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:import/errors"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "plugins": ["babel", "prettier"],
  "rules": {
    "strict": [0, "global"],
    "func-names": [2, "never"],
    "global-require": 0,
    "func-style": [2, "expression", { "allowArrowFunctions": true }]
  }
}
